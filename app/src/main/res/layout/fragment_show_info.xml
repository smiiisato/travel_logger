<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowInfoFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#FA8000"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_horizontal|center_vertical">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="feeling"
                android:background="@drawable/btn_round_border"
                android:src="@drawable/ic_baseline_add_reaction_24"
                android:minHeight="0dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FA8000"
                android:textColor="#FFFFFF"
                />

            //show icon here
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/normalFace2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ic_baseline_sentiment_normal"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/happyFace2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ic_baseline_sentiment_happy"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/sadFace2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ic_baseline_sentiment_sad"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="weather"
                android:background="@drawable/btn_round_border"
                android:minHeight="0dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FA8000"
                android:textColor="#FFFFFF"/>

            //show icon here
            <LinearLayout
                android:id="@+id/buttonContainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/sunButton2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ic_baseline_wb_sun"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/cloudButton2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ic_baseline_cloud"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/rainButton2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ic_baseline_umbrella"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add diary"
        android:background="@drawable/btn_round_border"
        android:minHeight="0dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FA8000"
        android:textColor="#FFFFFF"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:background="@drawable/rectangle_border"
        android:layout_centerInParent="true"/>


    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add picture"
        android:background="@drawable/btn_round_border"
        android:minHeight="0dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FA8000"
        android:textColor="#FFFFFF"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />

</LinearLayout>